{
    "extends": "../tsconfig.json",
    "include": [
        "./**/*"
    ],
    "compilerOptions": {
        "types": [
            "node",
            "jest"
        ],
        "paths": {
            "src/*": [
                "./src/*"
            ],            
            "@unit/*": [
                "./testing/suites/unit/*"
            ],
            "@components/*": [
                "./testing/suites/components/*"
            ],
            "@integration/*": [
                "./testing/suites/integration/*"
            ],
            "@e2e/*": [
                "./testing/suites/e2e/*"
            ],
            "@testing/tools/*": [
                "./testing/tools/*",
            ]
        }
    }
}