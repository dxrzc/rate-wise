{
    "extends": "../tsconfig.json",
    "include": [
        "./**/*"
    ],
    "compilerOptions": {
        "types": [
            "node",
            "jest"
        ],
        "paths": {
            "src/*": [
                "./src/*"
            ],            
            "@unit/*": [
                "./testing/unit/*"
            ],
            "@components/*": [
                "./testing/components/*"
            ],
            "@integration/*": [
                "./testing/integration/*"
            ],
            "@e2e/*": [
                "./testing/e2e/*"
            ],
            "@commontestutils/*": [
                "./testing/common/utils/*",
            ]
        }
    }
}